<launch>
    <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
        <param name="destination_frame" value="chasis_footprint"/>
        <param name="cloud_destination_topic" value="/merged_cloud"/>
        <param name="scan_destination_topic" value="/scan_front_right"/>
        <param name="laserscan_topics" value ="/scan_front /scan_right" />
        
        <param name="angle_min" value="-1.5"/>
        <param name="angle_max" value="1.5"/>
        <param name="angle_increment" value="0.0058"/>
        <param name="scan_time" value="0.0"/>
        <param name="range_min" value="0.10"/>
        <param name="range_max" value="10.0"/>
        <param name="samples" value="50"/>
    </node>
</launch>

